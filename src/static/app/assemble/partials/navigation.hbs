<!-- partial:navigation -->
<div id="js-navigation" class="navigation navigation--interact-with-me clearfix">

	<a id="js-navigation__toggle" class="navigation__toggle" href="#js-navigation__nav" title="Hover to toggle hidden navigation, click to toggle sticky navigation">
		{{svg "logo"}}
		<span class="show-for-sr">Hover to toggle hidden navigation, click to toggle sticky navigation</span>
	</a>

	{{#parseFixture 'panels.json'}}
	<nav id="js-navigation__nav" class="navigation__nav">
		<ul class="navigation__list">
			{{#each panels}}

				<li class="navigation__item">
					<a class="navigation__link" href="#js-panel--{{id}}" title="Jump to the {{{nav-title}}} panel">
						<span class="navigation__link-text">{{{nav-title}}}</span>
					</a>
				</li>

			{{/each}}
		</ul>
	</nav>
	{{/parseFixture}}

</div>
<!-- end partial:navigation -->
